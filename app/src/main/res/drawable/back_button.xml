<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <item >
        <shape android:tintMode="src_in"
            android:shape="rectangle">
            <solid android:color="#ad25ad"/>

            <gradient android:startColor="#ad25ad"
                android:endColor="#FF00FF"
                android:centerColor="#ad25ad"
                android:gradientRadius="25dp"
                android:useLevel="true"
                android:type="radial"
                android:centerY="90"
                android:centerX="90"/>

            <stroke android:color="#ad25ad"
                android:width="1dp"
                android:dashGap="1dp"
                android:dashWidth="1dp"/>

            <corners android:radius="25dp"/>

        </shape>
    </item>

    <item android:state_pressed="true">
        <shape

            android:shape="rectangle">
            <solid android:color="#ad25ad"/>

            <gradient android:startColor="#FF00FF"
                android:endColor="#FF00FF"
                android:centerColor="#FF00FF"
                android:gradientRadius="25dp"
                android:useLevel="true"
                android:type="radial"
                android:centerY="90"
                android:centerX="90"/>

            <stroke android:color="#ad25ad"
                android:width="1dp"
                android:dashGap="1dp"
                android:dashWidth="1dp"/>

            <corners android:radius="25dp"/>

        </shape>
    </item>

</selector>