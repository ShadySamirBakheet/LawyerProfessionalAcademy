<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/background"
    android:layout_margin=".5dp">

    <LinearLayout
        android:padding="8dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="4dp"
            app:cardCornerRadius="35dp">

            <ImageView
                android:id="@+id/imgItem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/banner"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="4dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:padding="4dp"
                android:textSize="16dp"
                android:textColor="@color/txtColor1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="برانامج المحامي القانوني المحترف"/>

            <TextView
                android:padding="4dp"
                android:textSize="14dp"
                android:textColor="@color/txtColor4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="2dp"
                android:text="عدد المحضارات 9 كل محاضرة مدة ساعتين"/>

            <TextView
                android:id="@+id/dateItem"
                android:padding="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="يبدا في 15 مايو وينهي في 20 نوفمبر"/>

            <TextView
                android:padding="4dp"
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/txtColor5"
                android:text="سعر البرنامج 500 جنية"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>