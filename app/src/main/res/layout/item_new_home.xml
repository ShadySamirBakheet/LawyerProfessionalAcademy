<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/background"
    android:layout_margin="4dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgItem"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/banner2" />

        <TextView
            android:id="@+id/dateItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/descItem"
            android:padding="8dp"
            android:text="55 مايو 2021"
            android:textColor="@color/txtColor4"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/countCommentItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/descItem"
            android:layout_alignParentEnd="true"
            android:padding="8dp"
            android:visibility="gone"
            android:text="11 تعليق"
            android:textAlignment="viewStart"
            android:textColor="@color/txtColor4"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/titleItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgCon"
            android:padding="8dp"
            android:singleLine="true"
            android:text="عنوان الخبر"
            android:textAlignment="viewStart"
            android:textColor="@color/txtColor1"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/descItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleItem"
            android:paddingHorizontal="8dp"
            android:text="تحدث إجراءات السفر الخاصة بالمواطنين والمقيمين والزوار القادمين"
            android:textAlignment="viewStart"
            android:textColor="@color/txtColor1"
            android:textSize="14dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/imgCon"
            android:layout_below="@id/imgItem"
            android:layout_width="50dp"
            android:visibility="gone"
            android:layout_marginHorizontal="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_height="50dp"
            app:cardCornerRadius="25dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/user"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/userName"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgItem"
            android:layout_marginVertical="8dp"
            android:layout_toEndOf="@id/imgCon"
            android:paddingVertical="12dp"
            android:text="أسم المستخدم"
            android:textColor="@color/txtColor1"
            android:textSize="16dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>